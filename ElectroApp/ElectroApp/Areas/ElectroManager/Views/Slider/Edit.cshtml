@model IntroSlider
@{ ViewData["Title"] = "Edit"; }
<div class="container">
    <h2 class="mt-3">Slider Edit</h2>
    <div>
        <h4>
            Current slider image
        </h4>
        <img style="width:300px;height:200px;object-fit:contain" src="~/assets/images/slider/@Model.BackImage" alt="Slider image" />
    </div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.BackImageFile" class="form-label">Select Back Image</label>
            <input asp-for="@Model.BackImageFile" accept="image/*" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.BackImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.BannerImgFile" class="form-label">Select Image</label>
            <input asp-for="@Model.BannerImgFile" accept="image/*" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.BannerImgFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.FirstDesc" class="form-label">First Desc</label>
            <input asp-for="@Model.FirstDesc" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.FirstDesc"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SecDesc" class="form-label">Sec Desc</label>
            <input asp-for="@Model.SecDesc" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.SecDesc"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Price" class="form-label">Price</label>
            <input asp-for="@Model.Price" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Price"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}