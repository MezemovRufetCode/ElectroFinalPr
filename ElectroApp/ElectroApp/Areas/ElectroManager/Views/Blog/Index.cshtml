@model List<Blog>
@{
    ViewData["Title"] = "Index";
}
<style>
    td {
        vertical-align: middle !important;
    }
</style>
}
<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="blog" asp-action="create" class="btn btn-primary btn-icon-text mt-3">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Blog Image
                </th>
                <th>
                    Blog Title
                </th>
                <th>
                    Create Date
                </th>
                <th>
                    Written by
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Blog blog in Model)
            {
                <tr>
                    <td>
                        @blog.Id
                    </td>
                    <td>
                        <img style="width:90px;height:60px;object-fit:contain;border-radius:0px" src="~/assets/images/blog/@blog.Image" alt="blog image" />
                    </td>
                    <td>
                        @blog.Title
                    </td>
                    <td>
                        @blog.PublishDate.ToString("MMMM dd,yyyy")
                    </td>
                    <td>
                        @blog.WrittenBy
                    </td>
                    <td>
                        <a asp-controller="blog" asp-action="edit" asp-route-id="@blog.Id" class="btn btn-warning btn-icon-text">
                            <i class="fas fa-edit"></i>
                            Edit
                        </a>
                        <a asp-controller="blog" asp-action="delete" asp-route-id="@blog.Id" class="btn btn-danger btn-icon-text delete-item">
                            <i class="fas fa-trash-alt"></i>
                            Delete
                        </a>
                        @*<a asp-controller="blog" asp-action="comments" asp-route-BlogId="@blog.Id" class="btn btn-primary btn-icon-text mt-3">
                                <i class="fas fa-comments"></i>
                                Comments (@blog.Comments.Count)
                            </a>*@
                    </td>
                </tr>
       }
        </tbody>
    </table>
    @*pagination*@

    <div class="container" style="display:flex;justify-content:center">
        <div class="row justify-content-center mt-5">
            <nav aria-label="...">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage == 1)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" asp-controller="blog" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                        </li>
 }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="blog" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                        </li>
}

                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage==i ? "active" : "")
                                    " style="@(ViewBag.CurrentPage==i ? "pointer-events:none" : "")"><a asp-controller="blog" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
}

                    @if (ViewBag.CurrentPage == ViewBag.TotalPage)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" asp-controller="blog" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                        </li>
 }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="blog" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                        </li>
}
                </ul>
            </nav>
        </div>
    </div>

</div>
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $(document).ready(function () {
            $(".delete-item").click(function (e) {
                e.preventDefault();


                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var link = $(this).attr("href");
                        fetch(link).then(response => response.json()).then(data => {
                            if (data.status == 200) {
                                location.reload(true)
                            }
                            else {
                                Swal.fire(
                                    'Deleted!',
                                    'Your file has been deleted.',
                                    'success'
                                )
                            }
                        })

                    }
                })



            })
        })</script>
}